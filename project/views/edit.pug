div.home-content
	div.home-top-bar
		nav(class="navbar navbar-expand-sm bg-dark navbar-dark")
			ul(class="navbar-nav")
				li(class="nav-item active")
					a(class="nav-link" href='google.com') File
				li(class="nav-item ")
					a(class="nav-link" href='google.com') Edit
				li(class="nav-item ")
					a(class="nav-link" href='google.com') View
				li(class="nav-item ")
					a(class="nav-link" href='google.com') Help
	div.edit-content
		div.edit-inner-content
			form(action='/save', method='POST')
				div.form-group
					label(for="username") Field1
					input(type="text" class="form-control" name="field1")
				div.form-group
					label(class="form-check-label") Field2
					br
					input(type="radio", class="", name="field2", value="option1")
					label(for="field2") Option1
					br
					input(type="radio", class="", name="field2", value="option2")
					label(for="field2") Option2
				div.form-group
					label Field3
					select(class="form-control" name="field3")
						option(value="option1") Option1
						option(value="option2") Option2
				div.form-group
					label Field4
					textarea(class="form-control" name="field4") text
				button(class="btn-success btn" type="submit") Save